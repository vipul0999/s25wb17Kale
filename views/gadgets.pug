extends layout

block content
  h1 Gadgets

  div.container-fluid
    div.row
      //- Prevents error when results is undefined or empty
      if results && results.length  
        each item, index in results
          div.col-sm-4(onclick=`buy(${index})` style="cursor: pointer; border: 1px solid #ddd; padding: 10px; margin: 5px;")
            div.card.border-primary.mb-3(style="max-width: 18rem;")
              div.card-header #{item.name}
              div.card-body
                p Brand: #{item.brand}
                p Price: $#{item.price}
      else
        p No gadgets found.

  script.
    // Function to handle purchase alert
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
